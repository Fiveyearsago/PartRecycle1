<?xml version="1.0" encoding="utf-8"?>
<!-- 定损主信息 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surveyEvalBg" >

    <include
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/title_bar" />

    <ScrollView
        android:id="@+id/content_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/del_hsd"
        android:layout_below="@+id/titlebar" >

        <LinearLayout
            android:id="@+id/linearLayoutFlag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:textColor="@color/black" >

                    <TextView
                        android:id="@+id/eval_text_cxing"
                        style="@style/eval_function_tital"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text=" 车型信息"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/eval_btn_cxing"
                        style="@style/eval_function_button"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_dict"
                        android:text="定型"
                        android:textSize="17sp" />
                </RelativeLayout>

                <TableLayout
                    android:id="@+id/carinfolalyout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:shrinkColumns="1,2,3,4"
                    android:stretchColumns="1,2,3,4" >

                    <LinearLayout
                        style="@style/content_row"
                        android:layout_height="50dp"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/content_label"
                            android:layout_width="wrap_content"
                            android:text="报  案  号"
                            android:textSize="15sp" />

                        <LinearLayout
                            style="@style/content_row"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/pass"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="C"
                                android:visibility="gone"
                                android:textColor="@color/red"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/loss_no1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:digits="qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM1234567890"
                                android:inputType="textUri"
                                android:textColor="@color/blueMainText"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/loss_no2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:maxLength="8"
                                 android:visibility="gone"
                                android:text="00VEH160"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/loss_no3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.4"
                                 android:visibility="gone"
                                android:digits="qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM1234567890"
                                android:inputType="textUri"
                                android:maxLength="5"
                                android:textColor="@color/blueMainText"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <!--
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/pic_edit" />
                        -->
                    </LinearLayout>

                    <View
                        android:layout_height="1dip"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        style="@style/content_row"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/content_label"
                            android:layout_width="wrap_content"
                            android:text="车  牌  号 "
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/car"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/red"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/car_No"
                            style="@style/content_value_red_highlight"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:digits="qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM1234567890"
                            android:hint="请输入车牌号"
                            android:inputType="textUri" />
                    </LinearLayout>

                    <View
                        android:layout_height="1dip"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        style="@style/content_row"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/content_label"
                            android:layout_width="wrap_content"
                            android:text="联  系  人"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/text_contentPerson"
                            style="@style/content_value_red_highlight"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请输入联系人" />

                        <!-- <ImageView
                            android:id="@+id/contentPerson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dip"
                            android:src="@drawable/contact_book" /> -->

                        <Button
                            android:id="@+id/contentPerson"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dip"
                            android:text="通讯录"
                            android:background="@drawable/btn_dict" />
                    </LinearLayout>

                    <View
                        android:layout_height="1dip"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        style="@style/content_row"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/content_label"
                            android:layout_width="wrap_content"
                            android:text="联系电话"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/text_personTel"
                            style="@style/content_value_red_highlight"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请输入联系电话"
                            android:inputType="number" />
                    </LinearLayout>

                    <View
                        android:layout_height="1dip"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        style="@style/content_row"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/content_label"
                            android:layout_width="wrap_content"
                            android:text="联系地址"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/text_address"
                            style="@style/content_value_red_highlight"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:ellipsize="end"
                            android:clickable="true"
                            android:editable="false"
                            android:hint="请输入联系地址"
                            android:singleLine="true" />

                        <Button
                            android:id="@+id/addressButton"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:background="@drawable/btn_dict"
                            android:layout_marginRight="5dp"
                            android:text="定位" />
                    </LinearLayout>

                    <View
                        android:layout_height="1dip"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        style="@style/content_row"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:text="提货城市"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <Spinner
                            android:id="@+id/provinceSpinner"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="#DDDDDD"
                            android:padding="2dp" />

                        <Spinner
                            android:id="@+id/citySpinner"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="#DDDDDD"
                            android:padding="2dp" />
                    </LinearLayout>

                    <View
                        android:layout_height="1dip"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        style="@style/content_row"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/content_label"
                            android:layout_width="wrap_content"
                            android:text="提  货  商"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/text_tihuoshang"
                            style="@style/content_value_red_highlight"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:clickable="true"
                            android:ellipsize="end"
                            android:hint="未选择"
                            android:singleLine="true" />
                    </LinearLayout>
                    <View
                        android:layout_height="1dip"
                        android:background="@android:color/darker_gray" />
                    <LinearLayout
                        style="@style/content_row"
                        android:layout_height="50dp"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/content_label"
                            android:layout_width="wrap_content"
                            android:text="@string/repair_flag"
                            android:textSize="15sp" />

                        <RadioGroup
                            android:id="@+id/radioRepairGroup"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:id="@+id/radioRepairYes"
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:checked="true"
                                android:text="@string/repair_4s"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <RadioButton
                                android:id="@+id/radioRepairNo"
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:text="@string/repair_normal"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </RadioGroup>
                    </LinearLayout>

                    <View
                        android:layout_height="1dip"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        style="@style/content_row"
                        android:layout_height="50dp"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/content_label"
                            android:layout_width="wrap_content"
                            android:text="损失类型"
                            android:textSize="15sp" />

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:id="@+id/radioYes"
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:checked="true"
                                android:text="标的车"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <RadioButton
                                android:id="@+id/radioNo"
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:text="三者车"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </RadioGroup>
                    </LinearLayout>

                    <View
                        android:layout_height="1dip"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        style="@style/content_row"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/content_label"
                            android:layout_width="wrap_content"
                            android:text="品牌名称"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/veh_brand_name"
                            style="@style/content_value_red_highlight"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:background="@null" />
                    </LinearLayout>

                    <View
                        android:layout_height="1dip"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        style="@style/content_row"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/content_label"
                            android:layout_width="wrap_content"
                            android:text="车组名称"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/veh_certain_name"
                            style="@style/content_value_red_highlight"
                            android:layout_width="0dp"
                             android:textColor="#000000"
                            android:layout_weight="1"
                            android:background="@null" />
                    </LinearLayout>

                    <View
                        android:layout_height="1dip"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        style="@style/content_row"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/content_label"
                            android:layout_width="wrap_content"
                            android:text="车型名称"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/veh_cx_name"
                            style="@style/content_value_red_highlight"
                            android:layout_width="0dp"
                             android:textColor="#000000"
                            android:layout_weight="1"
                            android:background="@null" />
                    </LinearLayout>

                    <View
                        android:layout_height="1dip"
                        android:background="@android:color/darker_gray" />
                </TableLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/textPart"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textColor="@color/black" >

                <TextView
                    style="@style/eval_function_tital"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="换件项目"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/eval_btn_partx"
                    style="@style/pic_row"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/eval_btn_part"
                    style="@style/eval_function_button"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_dict"
                    android:text="换件"
                    android:textSize="17sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/partinfolayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <TableLayout
                    android:id="@+id/TableLayout04"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:id="@+id/talble_part_list"
                        android:background="@color/color2"
                        android:visibility="visible" >

                        <TextView
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="名称"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </TableRow>
                </TableLayout>

             <!--    <com.jy.recycle.ui.view.MyListView
                    android:id="@+id/eval_partList1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@null"
                    android:dividerHeight="1dip" >
                </com.jy.recycle.ui.view.MyListView> -->

                <com.jy.recycle.ui.view.MyListView
                    android:id="@+id/eval_partList"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@null"
                    android:dividerHeight="1dip" >
                </com.jy.recycle.ui.view.MyListView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="9dip"
                    android:background="@drawable/eval_new_downline" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/del_hsd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#20C6C6"
        android:text="整单删除"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>