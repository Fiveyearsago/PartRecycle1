<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"  
    android:paddingTop="3dip"  
    android:paddingRight="3dip"  
    android:id="@+id/layout"
    >  
  
    <ImageView   
        android:id="@+id/scan_img"  
        android:scaleType="centerCrop"  
        android:layout_height="200dp"  
        android:layout_width="fill_parent"  
        />  
    <ImageView   
        android:id="@+id/scan_select_del"  
        android:layout_height="wrap_content"  
        android:layout_width="wrap_content"  
        android:layout_alignRight="@id/scan_img"  
        android:layout_alignParentTop="true"  
        android:scaleType="matrix"  
        android:src="@drawable/photoimage_icon_del"
        android:padding="4dip"  
        />    
        
     <ImageView   
        android:id="@+id/scan_select_ok"  
        android:layout_height="wrap_content"  
        android:layout_width="wrap_content"  
        android:layout_alignLeft="@id/scan_img"  
        android:layout_alignParentTop="true"  
        android:src="@drawable/photoimage_icon_ok"
        android:padding="4dip"  
        />



     <ImageView
         android:id="@+id/fangda"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/scan_img"
         android:layout_alignParentLeft="true"
         android:src="@drawable/fangda" />

</RelativeLayout>
