<?xml version="1.0" encoding="utf-8"?>
<!-- 修理项目编辑 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/TableLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:shrinkColumns="1,2,3,4"
        android:stretchColumns="1,2,3,4" >

        <TextView
            android:id="@+id/dialog_tilte"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/blueMainText"
            android:gravity="center"
            android:text="修改维修项目"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TableRow android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="维护名称"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/repair_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                
                android:textColor="@color/dilaogColor" >
            </EditText>

            <TextView
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:text="险别名称:"
                android:visibility="gone" />

            <TextView
                android:id="@+id/repair_insure_term"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:visibility="gone" >
            </TextView>
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TableRow android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="维护工时"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/repair_price"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=""
                android:layout_weight="1"
                android:textColor="@color/blueMainText" >
            </EditText>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pic_edit" />
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TableRow android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="工时单价"
                android:textColor="@color/black"
                android:textSize="18sp" />

             <EditText
                android:id="@+id/repair_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                
                android:textColor="@color/blueMainText" >
            </EditText>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pic_edit" />
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TableRow android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="工种类型"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/repair_type"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blueMainText" >
            </TextView>
            
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TableRow android:paddingTop="10dp"  >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="工时总额"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/repair_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:layout_weight="1"
                android:textColor="@color/blueMainText" >
            </TextView>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pic_edit" />
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TableRow android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="备注:"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/repair_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=""
                  android:layout_weight="1"
                android:textColor="@color/blueMainText" >
            </EditText>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pic_edit" />
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dilaogColor" >

            <Button
                android:id="@+id/dialog_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:padding="10dip"
                android:text="保存"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:background="@color/white" />

            <Button
                android:id="@+id/dialog_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:padding="10dip"
                android:text="删除"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:background="@color/white" />

            <Button
                android:id="@+id/dialog_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:padding="10dip"
                android:text="取消"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </TableLayout>

</LinearLayout>