<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dip"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:shrinkColumns="0,1,2,3,4,5" >

    <TextView
        android:id="@+id/repair_insure_term"
        style="@style/eval_item_text"
        android:layout_width="100dip"
        android:layout_weight="2"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/xl_selBox"
        android:layout_width="38dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dip"
        android:clickable="false"
        android:focusable="false"
        android:paddingRight="20dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:visibility="gone" />

    <TextView
        android:id="@+id/eval_part_name"
        style="@style/eval_item_text"
        android:layout_width="180dip"
        android:layout_weight="2"
        android:gravity="left"
        android:layout_marginLeft="5dp"
        android:textColor="@color/blueMainText" />
<TextView
        android:id="@+id/eval_part_huishou"
        style="@style/eval_item_text"
        android:layout_width="70dip"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="未收"
        android:textColor="@color/blueMainText" />
    <TextView
        android:id="@+id/eval_part_photo"
        style="@style/eval_item_text"
        android:layout_width="80dip"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingRight="10dp"
        android:textColor="@color/blueMainText" />

    <TextView
        android:id="@+id/eval_part_saomiao"
        style="@style/eval_item_text"
        android:layout_width="80dip"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingRight="10dp"
        android:textColor="@color/blueMainText" />

    <TextView
        android:id="@+id/eval_part_del"
        style="@style/eval_item_text"
        android:layout_width="100dip"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:text="删除"
        android:layout_marginRight="30dp"
        android:textColor="@color/blueMainText" />

</LinearLayout>