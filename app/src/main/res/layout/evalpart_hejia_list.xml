<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dip"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:shrinkColumns="0,1,2,3,4,5" >

    <TextView
        android:id="@+id/eval_part_insure_term"
        style="@style/eval_item_text"
        android:layout_width="140dip"
        android:layout_weight="2"
        android:visibility="gone" />

    <TextView
        android:id="@+id/eval_part_name"
        style="@style/eval_item_text"
        android:layout_width="140dip"
        android:layout_weight="3" />

    <TextView
        android:id="@+id/eval_part_loss_price"
        style="@style/eval_item_text"
        android:layout_width="80dip"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/eval_part_loss_count"
        style="@style/eval_item_text"
        android:layout_width="50dip"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/eval_part_loss_sum"
        style="@style/eval_item_text"
        android:layout_width="100dip"
        android:layout_weight="2" />
    
     <TextView
        android:id="@+id/eval_part_loss_hprice"
        style="@style/eval_item_text"
        android:layout_width="80dip"
        android:layout_weight="1" />
     
      <TextView
        android:id="@+id/eval_part_loss_state"
        style="@style/eval_item_text"
        android:layout_width="80dip"
        android:layout_weight="1" />

</LinearLayout>