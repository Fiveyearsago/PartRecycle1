<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/tihuo_list_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tihuo_list_com_name"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:text="公司名称"
        android:textSize="13sp"
        android:maxLines="2"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tihuo_list_contact_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:textSize="13sp"
        android:gravity="center_horizontal"
        android:text="联系人"
        android:maxLines="2"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tihuo_list_contact_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:text="电话"
        android:textColor="@color/black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tihuo_list_contact_province"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="省份"
        android:textColor="@color/black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tihuo_list_contact_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="1.3"
        android:text="城市"
        android:maxLines="2"
        android:textSize="13sp"
        android:textColor="@color/black" />

</LinearLayout>